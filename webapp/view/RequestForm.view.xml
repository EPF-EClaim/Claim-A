<mvc:View xmlns:f="sap.f"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	controllerName="claima.controller.RequestForm">
	
    <Page 
        id="request_form"
        floatingFooter="true"
        showHeader="false">
        <content>
            <VBox 
                rowGap="1rem"
                class="sapUiSmallMargin">
                <VBox
                    id="request_form_header_box" 
                    backgroundDesign="Solid"
                    class="roundedBox"
                    rowGap="1rem">
                    <OverflowToolbar height="3rem">
                        <Title text="{i18n>req_form_header_title}" titleStyle="H3"/>
                        <ToolbarSpacer />
                        <Button type="Default" icon="sap-icon://print" />
                    </OverflowToolbar>
                    <HBox wrap="Wrap" rowGap="0.5rem" class="sapUiTinyMargin">
                        <VBox rowGap="0.5rem">
                            <HBox id="head_req_purpose">
                                <Text width="16rem" text="Request Purpose: " />
                                <Text width="24rem" text="{request>/purpose}" />
                            </HBox>
                            <HBox id="head_req_form_id">
                                <Text width="16rem" text="Request Form ID: "/>
                                <Text width="24rem" text="{request>/reqid}"/>
                            </HBox>
                            <HBox id="head_req_startdate">
                                <Text width="16rem" text="Trip/Report Start Date: "/>
                                <Text width="24rem" text="{request>/startdate}"/>
                            </HBox>
                            <HBox id="head_req_enddate">
                                <Text width="16rem" text="Trip/Request End Date: "/>
                                <Text width="24rem" text="{request>/enddate}"/>
                            </HBox>
                            <HBox id="head_req_location">
                                <Text width="16rem" text="Location: "/>
                                <Text width="24rem" text="{request>/location}"/>
                            </HBox>
                            <HBox id="header_req_details">
                                <Text width="16rem" text="Event Details: "/>
                                <Text width="24rem" text="{request>/detail}"/>
                            </HBox>
                            <HBox id="head_req_iog">
                                <Text width="16rem" text="Individual/Group: "/>
                                <Text width="24rem" text="{request>/indigrp}"/>
                            </HBox>
                        </VBox>
                        <VBox id="head_req_col_2" rowGap="0.5rem" >
                            <HBox id="head_req_status">
                                <Text width="16rem" text="Request Status: " />
                                <Text width="24rem" text="{request>/reqstatus}" />
                            </HBox>
                            <HBox id="head_req_cost_center">
                                <Text width="16rem" text="Cost Center: "/>
                                <Text width="24rem" text="{request>/costcenter}"/>
                            </HBox>
                            <HBox id="head_req_alt_cost_center">
                                <Text width="16rem" text="Alternate Cost Conter: "/>
                                <Text width="24rem" text="{request>/altcostcenter}"/>
                            </HBox>
                            <HBox id="head_req_cash_advance_amt">
                                <Text width="16rem" text="Cash Advance (MYR): "/>
                                <Text width="24rem" text="0.00" textAlign="End"/>
                            </HBox>
                            <HBox id="head_req_amt">
                                <Text width="16rem" text="Request Amount (MYR): "/>
                                <Text width="24rem" text="0.00" textAlign="End"/>
                            </HBox>
                            <HBox id="head_req_total_amt">
                                <Text width="16rem" text="Total Amount (MYR): "/>
                                <Text width="24rem" text="0.00" textAlign="End"/>
                            </HBox>
                            <HBox id="head_req_type">
                                <Text width="16rem" text="Request Type: "/>
                                <Text width="24rem" text="{request>/type}"/>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox
                    id="request_form_detail_box" 
                    backgroundDesign="Solid"
                    class="roundedBox"
                    rowGap="1rem">
                    <NavContainer id="req_form_item_container" initialPage="req_item_table_view">
                        <pages>
                            <ScrollContainer 
                                id="req_item_table_view"
                                vertical="true"
                                horizontal="false" >
                                <mvc:XMLView viewName="claima.view.RequestItemList"/>
                            </ScrollContainer>
                            <ScrollContainer 
                                id="req_create_item_view"
                                vertical="true"
                                horizontal="false">
                                <mvc:XMLView viewName="claima.view.RequestFormItem"/>
                            </ScrollContainer>
                        </pages>
                    </NavContainer>
                </VBox>    
            </VBox>
        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer />
                <Button id="req_back"           type="Back"         text="Back"             press=".onBack"                 visible="{= ${view>/currentPageId} === 'req_item_table_view' }"/>
                <Button id="req_save_draft"     type="Default"      text="Save Draft"       press=".onSaveRequestDraft"     visible="{= ${view>/currentPageId} === 'req_item_table_view' }"/>
                <Button id="req_delete"         type="Reject"       text="Delete Request"   press=".onDeleteRequest"        visible="{= ${view>/currentPageId} === 'req_item_table_view' }"/>
                <Button id="req_submit"         type="Emphasized"   text="Submit Request"   press=".onSubmitRequest"        visible="{= ${view>/currentPageId} === 'req_item_table_view' }"/>
                <Button id="req_item_cancel"    type="Default"      text="Cancel"           press=".onCancelItem"           visible="{= ${view>/currentPageId} === 'req_create_item_view' }"/>
                <Button id="req_item_save"      type="Emphasized"   text="Save"             press=".onSaveItem"             visible="{= ${view>/currentPageId} === 'req_create_item_view' }"/>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>