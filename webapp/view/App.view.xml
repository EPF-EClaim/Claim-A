<mvc:View
    controllerName="claima.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:Icon="sap.ui.core.Icon"
    xmlns:ShellBar="sap.f.ShellBar"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
    height="100%"
    class="sapUiResponsiveMargin"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <f:ShellBar
                showMenuButton="true"
                homeIcon="./resources/sap/ui/documentation/sdk/images/logo_sap.png"
                menuButtonPressed="onMenuButtonPress"
            />
        </tnt:header>
        <tnt:sideContent>
            <!-- <core:Fragment
					fragmentName="view.navigation"
					type="XML" /> -->
            <tnt:SideNavigation
                expanded="true"
                itemPress=".onItemPress"
                selectedKey="{i18n>dashboard}"
                itemSelect=".onItemSelect"
            >
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        key="dashboard"
                        text="{i18n>dashboard}"
                        icon="sap-icon://home"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="createreport"
                        text="{i18n>createreport}"
                        icon="sap-icon://add"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="myrequest"
                        text="{i18n>myrequest}"
                        icon="sap-icon://activity-items"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="request"
                        text="{i18n>approvals}"
                        icon="sap-icon://sys-enter"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="approval"
                        text="{i18n>analytics}"
                        icon="sap-icon://business-objects-experience"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="report"
                        text="{i18n>configuration}"
                        icon="sap-icon://action-settings"
                        enabled="true"
                        expanded="false"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="dashboard">
                <pages>
                    <ScrollContainer
                        id="dashboard"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        class="sapUiContentPadding">
                        <VBox>
                            <HBox>
                                <VBox
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween"
                                >
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="5rem"
                                                columnSize="20rem"
                                                gap="1rem"
                                            />
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/expensereport}"
                                            action="onAction">
                                        </w:Card>
                                    </f:GridContainer>
                                </VBox>
                                <VBox
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween"
                                >
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="5rem"
                                                columnSize="20rem"
                                                gap="1rem"
                                            />
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/myrequest}"
                                            action="onAction"
                                        />
                                    </f:GridContainer>
                                </VBox>
                                <VBox
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween">
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="5rem"
                                                columnSize="20rem"
                                                gap="1rem"
                                            />
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/approval}"
                                            action="onAction"/>
                                    </f:GridContainer>
                                </VBox>
                            </HBox>

                            <f:GridContainer>
                                <f:Card
                                    class="sapUiSmallMargin"
                                    width="90rem">
                                    <f:header>
                                        <cards:Header
                                            title="{i18n>myexpensesreport}"
                                            iconSrc="sap-icon://document-text"/>
                                    </f:header>
                                    <f:content>
                                        <List
                                            class="sapUiSmallMarginBottom"
                                            showSeparators="None">
                                        </List>
                                    </f:content>
                                </f:Card>
                            </f:GridContainer>
                            <f:GridContainer>
                                <f:Card
                                    class="sapUiSmallMargin"
                                    width="90rem"
                                >
                                    <f:header>
                                        <cards:Header
                                            title="{i18n>myrequest}"
                                            iconSrc="sap-icon://activity-items"
                                        />
                                    </f:header>
                                    <f:content>
                                        <List
                                            class="sapUiSmallMarginBottom"
                                            showSeparators="None"
                                        >
                                        </List>
                                    </f:content>
                                </f:Card>
                            </f:GridContainer>
                            <f:GridContainer>
                                <f:Card
                                    class="sapUiSmallMargin"
                                    width="90rem"
                                >
                                    <f:header>
                                        <cards:Header
                                            title="{i18n>approvals}"
                                            iconSrc="sap-icon://sys-enter"
                                        />
                                    </f:header>
                                    <f:content>
                                        <List
                                            class="sapUiSmallMarginBottom"
                                            showSeparators="None"
                                        />
                                    </f:content>
                                </f:Card>
                                <!-- </Panel> -->
                            </f:GridContainer>
                        </VBox>
                    </ScrollContainer>

                    <ScrollContainer
                        id="claim"
                        horizontal="false"
                        vertical="true"
                        height="100%">
                        <VBox class="sapUiResponsiveContentPadding">
                            <HBox class="sapUiResponsiveContentPadding">
                                <Title
                                    text="Claim"
                                    textAlign="Right"
                                    level="H3"
                                    titleStyle="H3"
                                    wrapping="true"
                                />
                            </HBox>
                            <HBox class="sapUiResponsiveContentPadding">
                                <Carousel
                                    id="carousel"
                                    ariaLabelledBy="carouselTitle"
                                    height="auto"
                                >
                                    <customLayout>
                                        <CarouselLayout visiblePagesCount="4" />
                                    </customLayout>
                                    <f:Card>
                                        <f:header>
                                            <cards:Header title="Draft Claim" />
                                        </f:header>
                                        <f:content>
                                            <l:VerticalLayout
                                                class="sapUiContentPadding"
                                                width="100%"
                                            >
                                                <l:BlockLayout>
                                                    <l:BlockLayoutRow>
                                                        <l:BlockLayoutCell
                                                            width="1"
                                                        >
                                                            <HBox
                                                                class="sapUiTinyMarginBottom">
                                                                <Label
                                                                    text="Claim ID:"/>
                                                            </HBox>
                                                            <HBox
                                                                class="sapUiTinyMarginBottom">
                                                                <Label
                                                                    text="Claim Type:"/>
                                                            </HBox>
                                                            <HBox
                                                                class="sapUiTinyMarginBottom">
                                                                <Label
                                                                    text="Details:"/>
                                                            </HBox>
                                                        </l:BlockLayoutCell>
                                                    </l:BlockLayoutRow>
                                                </l:BlockLayout>
                                            </l:VerticalLayout>
                                        </f:content>
                                    </f:Card>
                                </Carousel>
                            </HBox>
                            <HBox
                                class="sapUiResponsiveContentPadding"
                                id="content">
                                <VBox
                                    height="110px"
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween"
                                >
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="20rem"
                                                columnSize="25rem"
                                                gap="3rem"
                                            />
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/object}"
                                            action="onAction">
                                            <w:layoutData>
                                                <f:GridContainerItemLayoutData
                                                    minRows="4"
                                                    columns="3"/>
                                            </w:layoutData>
                                        </w:Card>
                                    </f:GridContainer>
                                </VBox>
                                <VBox
                                    height="110px"
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween">
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="20rem"
                                                columnSize="25rem"
                                                gap="1rem"/>
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/preclaim}"
                                            action="onAction"
                                        >
                                            <w:layoutData>
                                                <f:GridContainerItemLayoutData
                                                    minRows="4"
                                                    columns="3"
                                                />
                                            </w:layoutData>
                                        </w:Card>
                                    </f:GridContainer>
                                </VBox>
                                <VBox
                                    height="110px"
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween">
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="5rem"
                                                columnSize="25rem"
                                                gap="1rem"/>
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/autoclaim}"
                                            action="onAction">
                                            <w:layoutData>
                                                <f:GridContainerItemLayoutData
                                                    minRows="4"
                                                    columns="3"/>
                                            </w:layoutData>
                                        </w:Card>
                                    </f:GridContainer>
                                </VBox>
                                <VBox
                                    height="110px"
                                    class="sapUiSmallMargin"
                                    justifyContent="SpaceBetween">
                                    <f:GridContainer>
                                        <f:layout>
                                            <f:GridContainerSettings
                                                rowSize="5rem"
                                                columnSize="25rem"
                                                gap="1rem"/>
                                        </f:layout>
                                        <w:Card
                                            manifest="{manifests>/returnclaim}"
                                            action="onAction">
                                            <w:layoutData>
                                                <f:GridContainerItemLayoutData
                                                    minRows="4"
                                                    columns="3"/>
                                            </w:layoutData>
                                        </w:Card>
                                    </f:GridContainer>
                                </VBox>
                            </HBox>
                        </VBox>
                    </ScrollContainer>
                    <Page
                        id="createreport"
                        showHeader="false">
                        <!-- <ScrollContainer
                        id="createreport1"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        class="sapUiContentPadding"> -->
                        <content>
                            <core:Fragment
                                fragmentName="claima.fragment.report"
                                type="XML"/>
                                <VBox >
                                <core:Fragment
                                fragmentName="claima.fragment.expensetype"
                                type="XML"/>
                                </VBox>
                        </content>
                        <!-- </ScrollContainer> -->
                        <footer>
                            <Toolbar>
                                <ToolbarSpacer />
                                <Button
                                    id="cancelbtn"
                                    text="Cancel"
                                    press="onPressBack"
                                    enabled="true"
                                    visible="false"/>
                                    <Button
                                    id="savebtn"
                                    text="Save"
                                    press="onPressBack"
                                    enabled="true"
                                    visible="false"/>
                                <Button
                                    id="backbtn"
                                    text="Back"
                                    press="onPressBack"
                                    enabled="true"/>
                                <Button
                                    text="Save Draft"
                                    press="onPress"
                                    enabled="false"/>

                                <Button
                                    text="Delete Report"
                                    press="onPress"
                                    enabled="false"/>

                                <Button
                                    text="Submit Report"
                                    press="onPress"
                                    enabled="false"/>    
                            </Toolbar>
                        </footer>
                    </Page>
                    
                     <!-- <Page
                        id="createreportnext">
                        <content>
                            <core:Fragment
                                fragmentName="claima.fragment.report"
                                type="XML"/>
                                <VBox >
                                <core:Fragment
                                fragmentName="claima.fragment.claimdetails"
                                type="XML"/>
                                </VBox>
                        </content>
                        <footer>
                            <Toolbar>
                                <ToolbarSpacer />
                                <Button
                                    id="cancelbtn"
                                    text="Cancel"
                                    press="onPressBack"
                                    enabled="true"/>
                                <Button
                                    text="Save"
                                    press="onPress"
                                    enabled="false"/>   
                            </Toolbar>
                        </footer>
                    </Page> -->
                    <ScrollContainer
                        id="approval"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                        class="sapUiContentPadding">
                        <Text
                            text="This is the root page of the second element"
                        />
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
