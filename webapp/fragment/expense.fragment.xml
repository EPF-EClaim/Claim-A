	<Dialog title="{i18n>createnew}">
		<List>
			<InputListItem label="Report Purpose">
				<Input
					id="purpose"
					placeholder=""
					value="" />
			</InputListItem>
			<InputListItem label="Trip/Report Start Date">
				<Input
					id="startdate"
					placeholder=""
					value="" />
			</InputListItem>
			<InputListItem label="Trip/Report End Date">
				<Input
					id="enddate"
					placeholder=""
					value="" />
			</InputListItem>
			<InputListItem label="Associate to Pre-Approval Request">
				<Select>
					<core:Item key="direct" text="Direct/Not Applicable" />
