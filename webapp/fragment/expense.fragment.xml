<core:FragmentDefinition
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    id="expense-1"
>
    <Dialog title="{i18n>createnew}" contentWidth="900px">

            <f:SimpleForm
                id="SimpleFormToolbar"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="4"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="true"
                ariaLabelledBy="Title1"
            >
                <f:content>
                    <Label text="{i18n>reportpurpose}" />
                    <Input value="{report>/reportpurpose}" required="true" id="idreportpurpose"/>
                    <Label text="{i18n>startdate}" />
                    <Input required="true"
                        value="{report>/startdate}"
                        type="Date" id="idstartdate" 
                    />
                    <Label text="{i18n>enddate}" />
                    <Input
                        value="{report>/enddate}"
                        type="Date" required="true" id="idenddate"
                    />
                    <Label text="{i18n>prerequest}" />
                    <Select
                        id="prereq"
                        selectedKey="{report>/prerequest}"
						required="true"
                    >
                        <items>
                            <core:Item
                                text="Auto Approve"
                                key="auto"
                            />
                            <core:Item
                                text="Direct (No Pre-approve is required)"
                                key="direct"
                            />
                        </items>
                    </Select>
                    <Label text="{i18n>approvedamt}" />
                    <Input
                        value="{report>/approvedamt}"
                        type="Number"
                    />
					<Label text="Comment" />
                    <Input value="{report>/comment}" required="true" />
                    <Label text="Attachment Email Approval" />
                    <u:FileUploader
                        id="fileUploader"
                        name="myFileUpload"
                        uploadUrl="upload/"
                        uploadComplete="handleUploadComplete"
                    />
                </f:content>
            </f:SimpleForm>
     
		<beginButton>
		 <Button
                id="create"
                press="onClickCreateReport"
                text="Create Report"
            /></beginButton>
			<endButton>
			<Button
                id="cancel"
                press="onClickCancel"
                text="Cancel"
            /></endButton>     
    </Dialog>
</core:FragmentDefinition>
